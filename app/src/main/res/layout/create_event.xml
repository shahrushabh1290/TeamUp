<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="30px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventNameForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Name  " />

            <EditText
                android:id="@+id/et_eventNameForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventDescForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Description  " />

            <EditText
                android:id="@+id/et_eventDescForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventTagForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Tags  " />

            <EditText
                android:id="@+id/et_eventTagForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:hint="#football,#soccer"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventLocForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Location  "/>

            <EditText
                android:id="@+id/et_eventLocForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="Central Park,New York"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventDateForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Date  "/>

            <TextView
                android:id="@+id/et_eventDateForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="Select a date"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventTimeForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Starts at  "/>

            <TextView
                android:id="@+id/et_eventTimeForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="Select start time"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventEndTimeForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="Ends at  "/>

            <TextView
                android:id="@+id/et_eventEndTimeForm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="Select end time"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30px"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_eventAttendance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="Number of people"/>

            <EditText
                android:id="@+id/tv_eventAttendanceVar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Verdana"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_createEvent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#7ab800"
                fancy:fb_focusColor="#9bd823"
                fancy:fb_radius="30dp"
                fancy:fb_text="CREATE EVENT"
                fancy:fb_textColor="#FFFFFF"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="67dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>