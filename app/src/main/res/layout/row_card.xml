<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/card_eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Anyone?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/card_eventTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags : Football,Soccer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/card_eventLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/card_eventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location : Central Park NY"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/card_eventTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/card_eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : 5:30 pm - 9:30 pm"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/fab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/card_eventAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance : 15/22"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/card_eventTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:tint="@android:color/white"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@android:color/holo_green_light"
        android:layout_below="@+id/card_eventTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>